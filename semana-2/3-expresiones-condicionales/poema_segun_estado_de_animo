Proceso Poema_segun_estado_de_animo
	Definir estadoAnimo Como Entero;
	
	Escribir 'Ingrese su estado de ánimo 1 (feliz) | 2 (desamor) | 3 (enamorado) | 4 (sad)';
	Leer estadoAnimo;
	
	Segun estadoAnimo Hacer
		1:
			Escribir 'Aea';
		2:
			Escribir 'Xvr manit@';
		3: 
			Escribir 'Ella || El no te ama';
		4:
			Escribir 'Unas aguas';
		De Otro Modo:
			Escribir 'Hábil te crees';
	
	FinSegun
	
FinProceso